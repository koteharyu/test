<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_party_path(@party) %> |
<%= link_to 'Back', parties_path %>

<h2><%= @party.name%>に参加中のメンバー一覧</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Role</th>
    </tr>
  </thead>

  <tbody>
    <% @party.members.each do |member|%>
      <tr>
        <td><%= member.name%></td>
        <% %>
        <td><%= member.id%></td>
        <td><%= link_to "脱退", remove_member_party_path(@party, params: { member_id: member.id}), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "幹事を設定する", "#"%>

<br>

<h2>グループに未参加のメンバー</h2>

  <table>
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>

    <tbody>
      <% @not_participated_members.each do |npm|%>
        <tr>
          <td><%= npm.name%></td>
          <td><%= link_to "参加", add_member_party_path(@party, { params: { member_id: npm.id } }), method: :put %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
